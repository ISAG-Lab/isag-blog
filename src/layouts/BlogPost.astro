---
import Layout from "./Layout.astro";
import BaseHead from "@components/BaseHead.astro";

export interface Props {
  content: {
    title: string;
    description: string;
    author: string;
    heroImage?: string;
    pubDate?: string;
    tag: string;
  };
}

const {
  content: { title, description, author = "ISAG Lab", pubDate, heroImage, tag },
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <Layout>
    {heroImage && <img class="w-full" src={heroImage} alt="" />}
    <article class="text-white my-4">
      <h1 class="text-4xl mb-2">{title}</h1>
      <div class="text-sm">
        <span>Written by {author}</span>
        <span>
          {
            pubDate && (
              <time datetime={pubDate}>
                {new Date(pubDate).toLocaleDateString("en-us", {
                  year: "numeric",
                  month: "short",
                  day: "numeric",
                })}
              </time>
            )
          }
        </span>
        <span>{tag}</span>
      </div>
    </article>
    <div class="text-white">
      <slot />
    </div>
  </Layout>
</html>
