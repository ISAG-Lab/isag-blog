---
export interface Props {
  title: string;
  description: string;
  pubDate: string;
  tag: string;
  heroImage: string;
  url: string;
}

const { title, description, pubDate, tag, heroImage, url } = Astro.props;
---

<div class="bg-[#615E5E] rounded-2xl shadow-md shadow-[#615E5E] mb-6 p-3 lg:p-5">
  <a href={url} rel="prefetch" class="flex justify-between">
    <div class="flex flex-col justify-between">
      <div>
        <h1 class="sm:text-xl lg:text-2xl text-white">{title}</h1>
        <p class="hidden sm:block text-[#f2f2f2]">{description}</p>
      </div>
      <div class="mt-4">
        <span class="text-xs lg:text-sm py-[1px] px-2 lg:px-4  rounded-xl bg-[#8A8A8A] text-white mr-1 lg:mr-2">{tag}</span
        >
        <time class="text-xs whitespace-nowrap lg:text-sm text-[#D8D6D6]" datetime={pubDate}>
          {
            new Date(pubDate).toLocaleDateString("en-us", {
              year: "numeric",
              month: "short",
              day: "numeric",
            })
          }
        </time>
      </div>
    </div>
    <div class="max-w-[100px] sm:max-w-[200px] md:max-w-[250px] ml-8">
      {heroImage && <img class="w-full" src={heroImage} alt="" />}
    </div>
  </a>
</div>
