---
export interface Props {
  title: string;
  description: string;
  pubDate: string;
  tag: string;
  heroImage: string;
  url: string;
}
const { title, description, pubDate, tag, heroImage, url }: Props = Astro.props;
---

<div class="bg-white mb-6 p-5 rounded-xl shadow-xl">
  <a href={url} class="flex justify-between">
    <div class="flex flex-col justify-between">
      <div>
        <h1 class="text-2xl">{title}</h1>
        <p>{description}</p>
      </div>
      <div class="mt-2">
        <span class="text-xs mr-2 bg-yellow-200 py-[2px] px-3 rounded-md">{tag}</span>
        <time datetime={pubDate} class="text-xs">
          {
            new Date(pubDate).toLocaleDateString("en-us", {
              year: "numeric",
              month: "short",
              day: "numeric",
            })
          }
        </time>
      </div>
    </div>
    <div class="max-w-[200px] ml-6">
      {heroImage && <img class="w-full" src={heroImage} alt="" />}
    </div>
  </a>
</div>
